<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    
<%= link_to "Proud of Yourself", '#', id: "logo" %>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
<%= link_to "Home", timeline_path %>
</li>

<% if logged_in? %>

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
<%= link_to "Profile", current_user %>
</li>
              <li>
<%= link_to "Settings", '#' %>
</li>
              <li class="divider"></li>
              <li>
                
<%= link_to "Log out", logout_path, method: "delete" %>

              </li>
            </ul>
          </li>
        
<% else %>

          <li>
<%= link_to "Log in", login_path %>
</li>
        
<% end %>

      </ul>
    </nav>
  </div>
</header>
<% if logged_in? %>
<div class="container">
  <div class ="row navbuttons">
    <div class="col-md-12">
      <div class="btn-group btn-group-justified" role="group">
            
            <%= link_to  timeline_path, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
              <br/>
              Timeline
            <% end %>
            
            <%= link_to  top10_microposts_path, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
              <br/>
              Recommend
            <% end %>
            
            <%= link_to  new_micropost_path, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
              <br/>
              Post
            <% end %>
            
            <%= link_to user_path(id: current_user.id), class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <br/>
              My Page
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>