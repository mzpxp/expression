<% if logged_in? %>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= link_to "all", root_url({tag: 'all'}) %> |
      <%= link_to "money", root_url({tag: 'money'}) %> |
      <%= link_to "job", root_url({tag: 'job'}) %> |
      <%= link_to "hobby", root_url({tag: 'hobby'}) %> |
      <%= link_to "love", root_url({tag: 'love'}) %> |
      <%= link_to "happy", root_url({tag: 'happy'}) %> |

      <%= render 'shared/feed' %>
    </div> 
  </div>
<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>


<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>

  </div>
<% end %>